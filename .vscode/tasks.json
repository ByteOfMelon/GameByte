{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "detail": "Configure the project with CMake"
        },
        {
            "label": "CMake: build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ],
            "dependsOn": "CMake: configure",
            "detail": "Build the project in Debug mode"
        }
    ]
}